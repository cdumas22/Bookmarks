<!DOCTYPE html>
<html>
	<head>
		<title>Bookmark Manager</title>
		<link rel="shortcut icon" href="/images/bookmark-icon-lg.png?v=2"/>
		<link rel="stylesheet" href="/stylesheets/bootstrap.min.css"/>
		<link rel="stylesheet" href="/stylesheets/site.css"/>
		<script src="/javascripts/Libraries/modernizr.js" type="text/javascript"></script>
		<script data-main="/javascripts/App/Main" src="/javascripts/Libraries/require.js"></script>
	</head>
	<body>
	<div>
		<% if (!user) { %>
			<p>
			<a href="/">Home</a> | 
			<a href="/login">Log In</a>
			</p>
		<% } else { %>
			<p>
			<a href="/">Home</a> | 
			<a href="/account">Account</a> | 
			<a href="/logout">Log Out</a>
			</p>
		<% } %>
		</div>
		<%- body %>
	</body>
</html>